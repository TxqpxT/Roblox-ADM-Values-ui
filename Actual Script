local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()
local Window = Rayfield:CreateWindow({
   Name = "Rayfield Example Window",
   Icon = 0,
   LoadingTitle = "Adopt Me Values",
   LoadingSubtitle = "By Txq_pxT",
   ShowText = "Rayfield",
   Theme = "Default",
   ToggleUIKeybind = "K",
   DisableRayfieldPrompts = false,
   DisableBuildWarnings = false,
   ConfigurationSaving = {
      Enabled = true,
      FolderName = nil,
      FileName = "Big Hub"
   },
   Discord = {
      Enabled = false,
      Invite = "noinvitelink",
      RememberJoins = true
   },
   KeySystem = false,
   KeySettings = {
      Title = "Untitled",
      Subtitle = "Key System",
      Note = "No method of obtaining the key is provided",
      FileName = "Key",
      SaveKey = true,
      GrabKeyFromSite = false,
      Key = {"Hello"}
   }
})

-- Perform the GET request
local https = require("ssl.https")
local ltn12 = require("ltn12")
local response_body = {}

local res, code, response_headers = https.request{
    url = "https://elvebredd.com/",
    sink = ltn12.sink.table(response_body)
}

local websiteContent = ""

if res == 1 then
    websiteContent = table.concat(response_body)
else
    websiteContent = "HTTP request failed with code: " .. tostring(code)
end

-- Create a label to display the website content
local WebsiteLabel = Window:CreateLabel({
    Title = "Elvebredd",
    Content = websiteContent,
    Size = {400, 300}
})

-- Load the configuration after setting up the label
Rayfield:LoadConfiguration()
